    <style>
      :root {
        --color-ink: #1a1814;
        --color-ink-soft: #3d3a36;
        --color-ink-tertiary: #6e6962;
        --color-paper: #faf8f5;
        --color-paper-warm: #f5f0e8;
        --color-accent: #d64d7a;
        --color-accent-soft: #e8a4bc;
        --color-accent-bg: #fdf2f6;
        --color-stone: #9c9489;
        --color-border: #e5e0d8;
        --color-surface: #ffffff;
        --color-ai-surface: #f2f0eb;

        --font-display: "Cormorant Garamond", Georgia, serif;
        --font-body: "DM Sans", -apple-system, sans-serif;

        --space-xs: 0.5rem;
        --space-sm: 1rem;
        --space-md: 1.5rem;
        --space-lg: 3rem;
        --space-xl: 5rem;

        --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
        --duration-normal: 400ms;
      }

      [data-theme="dark"] {
        --color-ink: #e8e4df;
        --color-ink-soft: #c4bfb8;
        --color-ink-tertiary: #9c9489;
        --color-paper: #1a1814;
        --color-paper-warm: #222019;
        --color-accent: #e8729a;
        --color-accent-soft: #8c3a55;
        --color-accent-bg: #2d1a22;
        --color-stone: #7a756e;
        --color-border: #3d3a36;
        --color-surface: #252320;
        --color-ai-surface: #2a2722;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      html {
        font-size: 16px;
        scroll-behavior: smooth;
      }

      body {
        font-family: var(--font-body);
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-ink);
        background-color: var(--color-paper);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        transition:
          background-color 0.3s,
          color 0.3s;
      }

      ::selection {
        background-color: var(--color-accent-soft);
        color: var(--color-ink);
      }
      :focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
      }
      a {
        color: inherit;
        text-decoration: none;
      }
      button {
        font: inherit;
        color: inherit;
        background: none;
        border: none;
        cursor: pointer;
      }

      .container {
        max-width: 780px;
        margin: 0 auto;
        padding: 0 var(--space-md);
      }

      /* --- NAV --- */
      .site-nav {
        padding: 0.6rem 0;
        background: var(--color-accent);
      }
      .site-nav .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .site-nav__links {
        display: flex;
        gap: var(--space-md);
      }
      .site-nav__link {
        font-size: 0.8rem;
        font-weight: 500;
        color: #fff;
        opacity: 0.9;
        transition: opacity 0.2s;
      }
      .site-nav__link:hover {
        opacity: 1;
        text-decoration: underline;
      }

      /* Dark mode toggle */
      .theme-toggle {
        color: #fff;
        opacity: 0.9;
        transition: opacity 0.2s;
        padding: 2px;
        display: flex;
        align-items: center;
      }
      .theme-toggle:hover {
        opacity: 1;
      }
      .theme-toggle svg {
        width: 18px;
        height: 18px;
      }
      .theme-toggle__sun {
        display: none;
      }
      .theme-toggle__moon {
        display: block;
      }
      [data-theme="dark"] .theme-toggle__sun {
        display: block;
      }
      [data-theme="dark"] .theme-toggle__moon {
        display: none;
      }

      /* --- HERO --- */
      .hero {
        padding: var(--space-xl) 0 var(--space-lg);
      }
      .hero__name {
        font-family: var(--font-display);
        font-size: 2.5rem;
        font-weight: 500;
        line-height: 1.15;
        margin-bottom: 0.25rem;
      }
      .hero__name-first {
        color: var(--color-accent);
      }
      .hero__title {
        font-size: 1rem;
        color: var(--color-stone);
        font-weight: 400;
        letter-spacing: 0.02em;
        margin-bottom: var(--space-md);
      }
      .hero__statement {
        font-size: 1.05rem;
        line-height: 1.75;
        max-width: 580px;
        color: var(--color-ink-soft);
      }

      /* --- POSITIONING --- */
      .positioning {
        padding: 0 0 var(--space-lg);
      }
      .positioning p {
        font-size: 0.95rem;
        line-height: 1.75;
        color: var(--color-ink-soft);
        max-width: 620px;
        margin-bottom: var(--space-sm);
      }
      .positioning p:last-child {
        margin-bottom: 0;
      }
      .positioning em {
        font-style: normal;
        color: var(--color-ink);
        font-weight: 500;
      }

      /* --- DIVIDER --- */
      .divider {
        border: none;
        border-top: 1px solid var(--color-border);
        margin: var(--space-lg) 0;
      }

      /* --- SECTION LABEL --- */
      .section-label {
        font-family: var(--font-body);
        font-size: 0.7rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        color: var(--color-accent);
        margin-bottom: var(--space-xs);
      }
      .section-heading {
        font-family: var(--font-display);
        font-size: 1.75rem;
        font-weight: 500;
        line-height: 1.25;
        margin-bottom: var(--space-sm);
      }

      /* --- SKILLS --- */
      .skills {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-sm);
        margin-top: var(--space-md);
      }
      .skill {
        padding: var(--space-md);
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        transition: border-color var(--duration-normal) var(--ease-out-expo);
      }
      .skill:hover {
        border-color: var(--color-accent-soft);
      }
      .skill__label {
        font-size: 0.65rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-accent);
        margin-bottom: var(--space-xs);
      }
      .skill__heading {
        font-family: var(--font-display);
        font-size: 1.2rem;
        font-weight: 500;
        line-height: 1.3;
        margin-bottom: 0.4rem;
      }
      .skill__text {
        font-size: 0.875rem;
        color: var(--color-ink-soft);
        line-height: 1.65;
      }
      .skill__proof {
        font-size: 0.8rem;
        color: var(--color-ink-tertiary);
        line-height: 1.6;
        margin-top: var(--space-xs);
        padding-top: var(--space-xs);
        border-top: 1px solid var(--color-border);
      }

      /* --- DEMO --- */
      .demo {
        margin-top: var(--space-lg);
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        overflow: hidden;
      }
      .demo__header {
        padding: var(--space-md) var(--space-md) var(--space-xs);
      }
      .demo__heading {
        font-family: var(--font-display);
        font-size: 1.35rem;
        font-weight: 500;
        margin-bottom: 0.3rem;
      }
      .demo__intro {
        font-size: 0.875rem;
        color: var(--color-ink-soft);
        line-height: 1.6;
        max-width: 520px;
      }
      .demo__tabs {
        display: flex;
        flex-wrap: wrap;
        padding: 0 var(--space-md);
        border-bottom: 1px solid var(--color-border);
        gap: 0;
      }
      .demo__tab {
        padding: var(--space-xs) var(--space-sm);
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--color-stone);
        border-bottom: 2px solid transparent;
        white-space: nowrap;
        transition:
          color 0.2s,
          border-color 0.2s;
      }
      .demo__tab:hover {
        color: var(--color-ink-soft);
      }
      .demo__tab--active {
        color: var(--color-accent);
        border-bottom-color: var(--color-accent);
      }
      .demo__body {
        padding: var(--space-md);
        min-height: 140px;
      }
      .demo__panel {
        display: none;
      }
      .demo__panel--active {
        display: block;
        animation: fadeUp 0.3s ease;
      }
      .demo__panel-label {
        font-size: 0.65rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--color-accent);
        margin-bottom: var(--space-xs);
      }
      .demo__panel-text {
        font-size: 0.95rem;
        line-height: 1.75;
      }
      .demo__panel-note {
        margin-top: var(--space-xs);
        font-size: 0.775rem;
        color: var(--color-stone);
        font-style: italic;
        line-height: 1.55;
      }

      @keyframes fadeUp {
        from {
          opacity: 0;
          transform: translateY(4px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* --- AI SECTION --- */
      .ai-section {
        background: var(--color-ai-surface);
        border-radius: 8px;
        padding: var(--space-md);
        margin-top: var(--space-lg);
      }
      .ai-section .section-heading {
        margin-bottom: var(--space-xs);
      }
      .ai-section__intro {
        font-size: 0.9rem;
        color: var(--color-ink-soft);
        line-height: 1.7;
        margin-bottom: var(--space-md);
        max-width: 560px;
      }
      .ai-items {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
      }
      .ai-item {
        display: grid;
        grid-template-columns: 1.75rem 1fr;
        gap: var(--space-sm);
        align-items: start;
      }
      .ai-item__marker {
        font-family: var(--font-display);
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-accent);
        margin-top: 1px;
      }
      .ai-item__title {
        font-weight: 500;
        font-size: 0.9rem;
        margin-bottom: 2px;
      }
      .ai-item__text {
        font-size: 0.85rem;
        color: var(--color-ink-soft);
        line-height: 1.65;
      }
      .ai-item__link {
        display: inline-block;
        margin-top: 4px;
        font-size: 0.8rem;
        color: var(--color-accent);
        font-weight: 500;
      }
      .ai-item__link:hover {
        text-decoration: underline;
      }
      .ai-section__coda {
        margin-top: var(--space-md);
        padding-top: var(--space-sm);
        border-top: 1px solid var(--color-border);
        font-size: 0.875rem;
        color: var(--color-ink-soft);
        line-height: 1.7;
        max-width: 540px;
      }

      /* --- PORTFOLIO --- */
      .portfolio {
        margin-top: var(--space-lg);
      }
      .portfolio__items {
        display: flex;
        flex-direction: column;
        gap: 0;
        margin-top: var(--space-md);
      }
      .portfolio__item {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        padding: var(--space-sm) 0;
        border-bottom: 1px solid var(--color-border);
        transition: color var(--duration-normal) var(--ease-out-expo);
      }
      .portfolio__item:first-child {
        border-top: 1px solid var(--color-border);
      }
      .portfolio__item:hover {
        color: var(--color-accent);
      }
      .portfolio__item-title {
        font-weight: 500;
        font-size: 0.9rem;
      }
      .portfolio__item-context {
        font-size: 0.8rem;
        color: var(--color-stone);
        margin-top: 2px;
      }
      .portfolio__item:hover .portfolio__item-context {
        color: var(--color-accent-soft);
      }
      .portfolio__item-arrow {
        font-size: 0.9rem;
        color: var(--color-stone);
        flex-shrink: 0;
        margin-left: var(--space-sm);
        transition: transform 0.2s;
      }
      .portfolio__item:hover .portfolio__item-arrow {
        color: var(--color-accent);
        transform: translateX(3px);
      }

      /* --- CTA --- */
      .cta {
        padding: var(--space-xl) 0;
      }
      .cta__statement {
        font-family: var(--font-display);
        font-size: 1.5rem;
        font-weight: 500;
        line-height: 1.4;
        max-width: 500px;
        margin-bottom: var(--space-md);
      }
      .cta__links {
        display: flex;
        gap: var(--space-sm);
        flex-wrap: wrap;
      }
      .cta__link {
        font-size: 0.85rem;
        font-weight: 500;
        padding: 9px 22px;
        border-radius: 6px;
        transition: all 0.2s;
      }
      .cta__link--primary {
        background: var(--color-accent);
        color: #fff;
      }
      .cta__link--primary:hover {
        background: #c2446d;
      }
      [data-theme="dark"] .cta__link--primary:hover {
        background: #f08db5;
      }
      .cta__link--secondary {
        border: 1px solid var(--color-border);
        color: var(--color-ink-soft);
      }
      .cta__link--secondary:hover {
        border-color: var(--color-accent);
        color: var(--color-accent);
      }

      /* --- FOOTER --- */
      .site-footer {
        padding: var(--space-sm) 0;
        border-top: 1px solid var(--color-border);
        font-size: 0.75rem;
        color: var(--color-stone);
      }

      /* --- RESPONSIVE --- */
      @media (max-width: 640px) {
        .hero__name {
          font-size: 2rem;
        }
        .skills {
          grid-template-columns: 1fr;
        }
        .section-heading {
          font-size: 1.5rem;
        }
        .cta__statement {
          font-size: 1.3rem;
        }
        .demo__tabs {
          padding: 0 var(--space-sm);
        }
        .demo__tab {
          font-size: 0.7rem;
        }
        .ai-section {
          padding: var(--space-sm);
        }
      }
    </style>
  </head>
