---
// src/components/Contact.astro
interface Props {
  heading?: string;
  email?: string;
  linkedInUrl?: string;
}

const {
  heading = "Get in Touch",
  email = "hellomaemendoza@gmail.com",
  linkedInUrl = "https://www.linkedin.com/in/maemariamendoza/",
} = Astro.props;
---

<footer class="bg-neutral-900 py-16 md:py-24" role="contentinfo">
  <div class="max-w-5xl mx-auto px-6 md:px-12 text-center">
    <h2
      class="font-display text-3xl md:text-4xl font-bold uppercase tracking-tight text-white mb-8"
    >
      {heading}
    </h2>

    <div
      class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-10"
    >
      <!-- Email -->
      <a
        href={`mailto:${email}`}
        class="inline-flex items-center gap-2 text-neutral-300 hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-neutral-900 rounded-sm transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
        {email}
      </a>

      <!-- LinkedIn -->
      <a
        href={linkedInUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-neutral-300 hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-neutral-900 rounded-sm transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
          ></path>
        </svg>
        LinkedIn
        <span class="sr-only">(opens in new tab)</span>
      </a>
    </div>

    <p class="mt-12 text-sm text-neutral-500">
      Â© {new Date().getFullYear()} Mae Mendoza. All rights reserved.
    </p>
  </div>
</footer>
