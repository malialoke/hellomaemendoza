---
// src/components/PositioningStatement.astro
interface Props {
  statement?: string;
  linkedInUrl?: string;
  images?: { src: string; alt: string }[];
}

const {
  statement = "I transform complex information into clear, effective content. I'm a Content Design Specialist and Subject Matter Expert. For the past 5 years, I've been in K-12 educational technology and publishing. Prior to that, I taught Social Studies and English at every level from 6th grade to college undergraduates. I'm fascinated with the structure of language and ways to increase readability and accessibility while maintaining content depth and rigor.",
  linkedInUrl = "https://www.linkedin.com/in/maemariamendoza/",
} = Astro.props;
---

<section
  class="bg-neutral-100 py-16 md:py-24"
  aria-labelledby="positioning-heading"
>
  <div class="max-w-7xl mx-auto px-6 md:px-12">
      <!-- Text Column -->
      <div class="space-y-8 order-2 lg:order-1">
        <h2
          id="positioning-heading"
          class="font-display text-3xl md:text-4xl font-bold uppercase tracking-tight text-neutral-900"
        >
          Hi, I'm Mae!
        </h2>
        <p class="text-lg md:text-xl text-neutral-700 leading-relaxed">
          {statement}
        </p>
        <a
          href={linkedInUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-neutral-900 font-medium hover:text-neutral-600 focus:outline-none focus-visible:ring-2 focus-visible:ring-neutral-900 focus-visible:ring-offset-2 rounded-sm transition-colors"
        >
          Connect on LinkedIn
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
          <span class="sr-only">(opens in new tab)</span>
        </a>
    </div>
  </div>
</section>

